<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="38.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swen2.tp.swen2_tp_hw.view.TableMenuController">
    <children>
        <HBox prefHeight="45.0" prefWidth="600.0" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Logs" underline="true">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                    <padding>
                        <Insets right="10.0" top="6.0" />
                    </padding>
                </Label>
                <Button fx:id="btn_createLog" mnemonicParsing="false" onAction="#onAddLogClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #01A098; -fx-background-radius: 100;">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/add_icon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button fx:id="btn_deleteLog" mnemonicParsing="false" onAction="#onDeleteLogClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #CC334A; -fx-background-radius: 100;">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/delete_icon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #0088C1; -fx-background-radius: 100;">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/edit_icon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            </children>
         <padding>
            <Insets left="10.0" right="10.0" top="4.0" />
         </padding>
        </HBox>
    </children>
</AnchorPane>
